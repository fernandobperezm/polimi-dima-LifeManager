<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_settings_backup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fernandoperez.lifemanager.activities.BackUpActivity"
    tools:showIn="@layout/activity_back_up"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/relativelayout_settings_backup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >

        <TextView
            android:id="@+id/textview_settings_backup_googledriveswitchbackup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_settings_backup_googledriveswitchbackup"
            android:textSize="20sp"
            />

        <Switch
            android:id="@+id/switch_settings_backup_googledriveswitchbackup"
            android:layout_alignRight="@id/textview_settings_backup_googledriveswitchbackup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:id="@+id/relativelayout_settings_backup_googledrivebackupONlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textview_settings_backup_googledriveswitchbackup"
            android:animateLayoutChanges="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_settings_backup_googledrivefrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_settings_backup_frequency"
                android:textSize="20sp"
                />

            <Spinner
                android:id="@+id/spinner_settings_backup_googledrivefrequency"
                android:layout_below="@id/textview_settings_backup_googledrivefrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </Spinner>

            <TextView
                android:id="@+id/textview_settings_backup_googledrivebackupfolder"
                android:layout_below="@id/spinner_settings_backup_googledrivefrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_settings_backup_backupfolder"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/button_settings_backup_googledrivebackupfolder"
                android:layout_below="@id/textview_settings_backup_googledrivebackupfolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_settings_backup_backupfolder"
                android:onClick="pickGoogleDriveFolder"
                >
            </Button>
        </RelativeLayout>


        <TextView
            android:id="@+id/textview_settings_backup_localswitchbackup"
            android:layout_below="@id/relativelayout_settings_backup_googledrivebackupONlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textview_settings_backup_localswitchbackup"
            android:textSize="20sp"
            />

        <Switch
            android:id="@+id/switch_settings_backup_localswitchbackup"
            android:layout_below="@id/relativelayout_settings_backup_googledrivebackupONlayout"
            android:layout_alignRight="@id/textview_settings_backup_localswitchbackup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:id="@+id/relativelayout_settings_backup_localbackupONlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/textview_settings_backup_localswitchbackup"
            android:animateLayoutChanges="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/textview_settings_backup_localfrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_settings_backup_frequency"
                android:textSize="20sp"
                />

            <Spinner
                android:id="@+id/spinner_settings_backup_localfrequency"
                android:layout_below="@id/textview_settings_backup_localfrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </Spinner>

            <TextView
                android:id="@+id/textview_settings_backup_localbackupfolder"
                android:layout_below="@id/spinner_settings_backup_localfrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/textview_settings_backup_backupfolder"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/button_settings_backup_localbackupfolder"
                android:layout_below="@id/textview_settings_backup_localbackupfolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/button_settings_backup_backupfolder"
                android:onClick="getBackupFolderFromGoogleDrive"
                >
            </Button>
        </RelativeLayout>

        <Button
            android:id="@+id/button_settings_backup_backupnow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/button_settings_backup_backupnow"
            android:layout_below="@id/relativelayout_settings_backup_localbackupONlayout"
            android:onClick="makeBackUpNow"
            />

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>