<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spotify_login_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_spotify_title"
            android:text="@string/textview_spotify_title"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <RelativeLayout
            android:id="@+id/relativelayout_spotify_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textview_spotify_title">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_spotify_playpause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                app:backgroundTint="@color/spotify_buttons_color"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_action_playback_play"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_spotify_previoussong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_toStartOf="@id/fab_spotify_playpause"
                android:layout_toLeftOf="@id/fab_spotify_playpause"
                app:backgroundTint="@color/spotify_buttons_color"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_action_playback_prev"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_spotify_nextsong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/fab_spotify_playpause"
                android:layout_toRightOf="@id/fab_spotify_playpause"
                android:layout_margin="5dp"
                app:backgroundTint="@color/spotify_buttons_color"
                app:fabSize="normal"
                app:srcCompat="@drawable/ic_action_playback_next"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_spotify_currentlyplaying"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/relativelayout_spotify_buttons">

            <TextView
                android:id="@+id/textview_spotify_currentlyplaying"
                android:text="@string/textview_spotify_currentlyplaying"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/textview_spotify_song"
                android:hint="@string/textview_spotify_song"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/textview_spotify_currentlyplaying"
                android:layout_toEndOf="@id/textview_spotify_currentlyplaying"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout_spotify_currentplaylist"
            android:layout_below="@+id/relativelayout_spotify_currentlyplaying"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_spotify_currentplaylist"
                android:text="@string/textview_spotify_currentplaylist"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/textview_spotify_playlist"
                android:hint="@string/textview_spotify_playlist"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/textview_spotify_currentplaylist"
                android:layout_toEndOf="@id/textview_spotify_currentplaylist"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_spotify_playlists"
            android:layout_below="@id/relativelayout_spotify_currentplaylist"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>


