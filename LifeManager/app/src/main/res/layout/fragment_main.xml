<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fernandoperez.lifemanager.fragments.MainFragment"
    tools:showIn="@layout/activity_main"
    android:typeface="serif">
    <!--android:background="@drawable/fondo">-->


    <TextView
        android:text="Arriving Services"
        android:textStyle="bold"
        android:textColor="#2222ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView10"
        android:textSize="30sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Configuration Name"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:ems="10"
        android:background="@drawable/wrapper"
        android:id="@+id/edittext_activity_main"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView10"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/edittext_activity_main">


        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/twitterg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB1" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/spotig"
            android:background="@drawable/wrapper"
            android:id="@+id/imB2" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/gmailg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB3" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/blg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB4" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/wifig"
            android:background="@drawable/wrapper"
            android:id="@+id/imB5" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/gpsg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB6" />

    </GridLayout>

</RelativeLayout>
