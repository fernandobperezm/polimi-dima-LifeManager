<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bg"
    android:typeface="serif"


    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:text="Arriving Services"
        android:textStyle="bold"
        android:textColor="#2222ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView10"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Configuration Name"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:ems="10"
        android:background="@drawable/wrapper"
        android:id="@+id/configname"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView10"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:id="@+id/grid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/configname">


        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/twitterg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB1" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/spotig"
            android:background="@drawable/wrapper"
            android:id="@+id/imB2" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/gmailg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB3" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/blg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB4" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/wifig"
            android:background="@drawable/wrapper"
            android:id="@+id/imB5" />

        <ImageButton
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/gpsg"
            android:background="@drawable/wrapper"
            android:id="@+id/imB6" />

    </GridLayout>


    </RelativeLayout>

</ScrollView>